{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/components/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
